        x:Class="WielkaSowa.Views.SettingsWindow"
        x:DataType="viewmodels:MainWindowViewModel"
        x:Name="SWindow"
        Title="Ustawienia"
        Icon="/Assets/Icons/main.ico"
        ExtendClientAreaToDecorationsHint="{Binding Path=!SimpleUI, Source={x:Static helpers:Settings.SettingsModel}}"
        TransparencyLevelHint="{Binding Path=SimpleUI, Source={x:Static helpers:Settings.SettingsModel}, Converter={StaticResource BoolToWindowTransparencyLevelConverter}}"
        Background="#EE202120"
        Width="375">
