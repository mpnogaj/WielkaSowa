    <Grid RowDefinitions="Auto,*,75" Margin="10, 0, 10, 0" HorizontalAlignment="Center">
        <TextBlock Grid.Row="0" x:Name="Title" Margin="0, 7, 0, 0" IsHitTestVisible="False" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Text="Ustawienia"/>
        <StackPanel Grid.Row="1" Margin="10, 15, 10, 0">
            <CheckBox Content="Użyj prostego UI"
                      ToolTip.Tip="Włączenie tej opcji może spowodować wzrost wydajności na słabszych komputerach"
                      IsChecked="{Binding Path=SimpleUI, Source={x:Static helpers:Settings.SettingsModel}}" />
        </StackPanel>
    </Grid>
